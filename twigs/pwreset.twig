{% extends 'page.twig' %}

{% block scripts %}
    <script src="{{assets}}/js/parsley.min.js"></script>
{% endblock scripts %}

{% block onload %}
    $('#pwform').parsley()
{% endblock onload %}

{% block pageheader %}
{% endblock pageheader %}

{% block main %}
    <div class="row" id="frontpage">
	<div class="col-md-6 col-md-offset-3">
	    {% include 'message.twig' %}
	    <form action="{{base}}/forgot/reset" method="post" class="well">
		<input type="hidden" value="{{pwuser.getID}}" name="uid"/>
		<input type="hidden" value="{{code}}" name="code"/>
		<fieldset>
		    <legend>Set Your New Password</legend>
		    <div class="form-group">
			<label for="pw" class="control-label">Password</label>
			<input type="password" id="pw" name="password" placeholder="***********" class="form-control" required="required  data-parsely-equalto="#rpw""/>
		    </div>
		    <div class="form-group">
			<label for="rpw" class="control-label">Repeat Password</label>
			<input type="password" id="rpw" name="repeat" placeholder="***********" class="form-control" required="required"
			    data-parsley-trigger="change" data-parsely-equalto="#pw"/>
		    </div>
		    <button class="btn btn-primary btn-sm" type="submit">Set</button>
		</fieldset>
	    </form>
	</div>
    </div>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}
