{% extends 'page.twig' %}

{% import 'form.twig' as f %}

{% block title %}
  Edit Publication {{publication.name}}
{% endblock title %}

{% block pageheader %}
{% endblock pageheader %}

{% block main %}
    <section class="row">
        <div class="col-md-2">
        <h3>Options</h3>
            <a href="/publication/"><i class="fa fa-list"></i>&nbsp;List</a><br />
            <a href="/publication/create"><i class="fa fa-plus-square-o"></i>&nbsp;Create</a>
            <a href="/publication/{{publication.id}}/update"><i class="fa fa-edit"></i>&nbsp;Edit</a><br />
            <a href="/publication/{{publication.id}}"><i class="fa fa-search"></i>&nbsp;View</a><br />
            <a href="/publication/{{publication.id}}/delete"><i class="fa fa-remove"></i>&nbsp;Delete</a>
            <div class="alert alert-warning">
                {{message}}
            </div>
        </div>
        <div class="col-md-10">
            <form action="#" method="post">
                <p>You are attempting to delete the document {{publication.name}}.</p>
                <div class="alert alert-danger">Are you sure you want to delete this?</div>
                <a href="/publication/{{publication.id}}" class="btn btn-success btn-lg">No!</a><br />
                <button type="submit" class="btn btn-danger btn-lg">Yes</button>
            </form>
        </div>
        </div>
    </section>
{% endblock main %}

{% block pagefooter %}
{% endblock pagefooter %}
