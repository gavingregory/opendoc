<head>
    <meta charset="utf-8"/>

    <title>{% block title %}{{context.sitename|upper}}{% endblock title %}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="shortcut icon" href="{{assets}}/images/favicon.png"/>
    <link rel="icon" type="image/png" href="{{assets}}/images/favicon.png"/>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" media="screen,print"/>
    <link rel="stylesheet" href="{{assets}}/bower_components/font-awesome/css/font-awesome.min.css"/>
    <link rel="stylesheet" href="{{assets}}/scss/site.css" media="screen"/>
    <link rel="stylesheet" href="{{assets}}/css/layout.css" media="screen"/>

{% block links %}
{% endblock links %}

{% block type %}
{% endblock type %}

{% block css %}
{% endblock css %}

</head>
<body lang="en-GB">
    {% block navigation %}
	{% include 'navbar.twig' %}
    {% endblock navigation %}

    <div class="container">
	{% block pageheader %}
	    <header class="row">
		{% block header %}
		{% endblock header %}
	    </header>
	{% endblock pageheader %}

	{% block main %}
	{% endblock main %}

	{% block pagefooter %}
	    <footer class="navbar navbar-fixed-bottom">
		{% block footer %}
            <p><i class="fa fa-copyright"></i>&nbsp;Newcastle University OpenDocuments 2015.</p>
		{% endblock footer %}
	    </footer>
	{% endblock pagefooter %}
    </div>

    <!--[if lt IE 9]>
        <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <![endif]-->
    <!--[if gte IE 9]><!-->
        <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
