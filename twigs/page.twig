    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>

    {% block scripts %}
    {% endblock scripts %}

    <script>
	var base = '{{base}}';

	{% block setup %}
	{% endblock setup %}

	$(function(){
	    {% block onload %}
	    {% endblock onload %}
	})
    </script>
</body>
</html>
